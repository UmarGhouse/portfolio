{
  "extends": [
    "wesbos"
  ],
  "rules": {
    "semi": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "react/prop-types": "off",
    "no-use-before-define": "warn",
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "depth": 3
      }
    ],
    "jsx-a11y/label-has-for": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2
      }
    ]
  }
}